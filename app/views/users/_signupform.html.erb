<div class="card mt-3 ms-3" style="width: 50rem;">
  <div class="card-body p-3">
    <%= form_for @user do |user| %>
      <div class="mb-3">
        <%= user.label :email, "Email Address", class: "form-label" %>
        <%= user.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= user.label :username, class: "form-label" %>
        <%= user.text_field :username, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= user.label :password, class: "form-label" %>
        <%= user.password_field :password, class: "form-control" %>
      </div>

      <%= user.submit(@user.new_record? ? 'Sign Up' : 'Edit Profile', class:"btn btn-primary")%>
    <% end %>
  </div>
</div>